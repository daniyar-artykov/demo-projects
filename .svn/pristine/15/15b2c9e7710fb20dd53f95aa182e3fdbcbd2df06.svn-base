    void checkMissmatch() {
        jLabel1.setVisible(!jPasswordField1.getText().isEmpty() && !jPasswordField2.getText().isEmpty() && jPasswordField1.isVisible() && jPasswordField2.isVisible());
        if (jPasswordField1.getText().equals(jPasswordField2.getText())) {
            jLabel1.setIcon(new ImageIcon("./images/buttons/success.png"));
            jLabel1.setText("The passwords match");
        } else {
            jLabel1.setIcon(new ImageIcon("./images/buttons/error.png"));
            jLabel1.setText("The passwords don't match");
        }
    }

    @Override
    public void focusGained(FocusEvent e) {
        checkMissmatch();
    }

    @Override
    public void focusLost(FocusEvent e) {
        checkMissmatch();
    }

    private void save() {
        Config c = Common.selectedCompanyConfig;

        if (c.get(Config.USE_PASSWORD).equals("false")) {
            if (!jPasswordField1.getText().equals(jPasswordField2.getText())) {
//                if(jPasswordField1.getText().isEmpty() || jPasswordField2.getText().isEmpty()){
//                    Messages.showWarningMessage(this, "Please type the password in both fields", "Warning");
//                    return;
//                }
                Messages.showWarningMessage(this, "The passwords don't match.", "Warning");
                return;
            }
            else{
                Messages.showOkMessage(this, "You have successfully enabled the password protection", "Information");
                c.set(Config.PASSWORD, Common.encode().encrypt(jPasswordField1.getText()));
            }
        } else {
            if(jPasswordField1.getText().equals(Common.encode().decrypt(c.get(Config.PASSWORD)))){
                Messages.showOkMessage(this, "You have successfully disabled the password protection", "Information");
                c.set(Config.PASSWORD, Common.encode().encrypt(""));
            }
            else{
                Messages.showWarningMessage(this, "You have entered a wrong password", "Warning");
                return;
            }
        }

        c.set(Config.USE_PASSWORD, c.get(Config.USE_PASSWORD).equals("false") ? "true" : "false");
        dispose();
    }
