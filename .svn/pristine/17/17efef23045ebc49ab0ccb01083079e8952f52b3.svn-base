    private void refreshDates() {
        Calendar calendar = Calendar.getInstance();
        String payTerm = jComboBoxPayementTerms.getSelectedItem().toString();
        try {
            calendar.setTime(issueDp.getDate());
            if (payTerm.contains("Net ")) {
                Integer days = Integer.parseInt(payTerm.replace("Net ", ""));
                calendar.add(Calendar.DATE, days);
                dueDp.setDate(calendar.getTime());
            } else if (payTerm.contains("Due On Receipt")) {
                dueDp.setDate(issueDp.getDate());
            } else if (payTerm.contains("Due On The Specified Date")) {
                dueDp.setDate(null);
                dueDp.requestFocus();
                dueDp.transferFocus();
            }
        } catch (Exception ex) {
            ex.printStackTrace();
        }
    }

    private void initialCopy(Invoice invoice) {
        Client c = new Client(invoice.getClient());
        sBACPanelClients.setSelectedItem(new AutosuggesterItem(c.getId(), c.getName(), c.getName(), c), c.getName());

        ForeignCollection<InvoiceProductEntity> invoiceProducts = invoice.getInvoiceProducts();

        BigDecimal discountAmount = BigDecimal.ZERO;
        for (InvoiceProductEntity item : invoiceProducts) {
            discountAmount = item.getDiscountPercentage().divide(new BigDecimal(100)).multiply(item.getPrice());
            BigDecimal quantity = item.getQuantity();
            BigDecimal price = item.getPrice().subtract(discountAmount);
            Tax tax = new Tax(item.getTax());

