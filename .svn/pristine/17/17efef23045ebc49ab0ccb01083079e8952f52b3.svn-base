    private void refreshActiveFlag() {
        try {
            activeFlag = Flag.getLast(Common.connection.getConnection());
        } catch (Exception ex) {
            ex.printStackTrace();
        }

        if (estimate != null) {
            if (activeFlag.isTotalInWords() != estimate.getFlag().isTotalInWords()) {
                activeFlag.setTotalInWords(JOptionPane.YES_OPTION == Messages.showQuestionMessage(JDialogIssueInvoice.this, "<html>You have modified the <b>Show Total in words</b> option.<br>Do you want this invoice to show the Total amount in words?</html>", "Confirmation"));
            }

            if (activeFlag.isShowSignature() != estimate.getFlag().isShowSignature()) {
                activeFlag.setShowSignature(JOptionPane.YES_OPTION == Messages.showQuestionMessage(JDialogIssueInvoice.this, "<html>You have modified the <b>Show Authorized Signatory on documents</b> option.<br>Do you want this invoice to show the <b>Authorized Signatory</b> text?</html>", "Confirmation"));
            }
        }

        if (invoice != null) {
            activeFlag = invoice.getFlag();
        }
        jCheckBoxTotalWithoutDecimals.setSelected(activeFlag.isTotalWithoutDecimals());
        jCheckBoxShipping.setSelected(activeFlag.isShowShipping());
        jTextFieldShipping.setText(activeFlag.getShippingPrice().setScale(precision, RoundingMode.HALF_UP).toPlainString());
        jTextFieldShipping.setVisible(jCheckBoxShipping.isSelected());
        jLabelShippingCurrency.setVisible(jCheckBoxShipping.isSelected());

        // is use document number prefix checked in preference
        if (activeFlag.isDocumentPrefix()) {
            jLabel2.setText("Prefix and Doc No");
            jTextFieldInvoicePrefix.setText(activeFlag.getDefaultDocumentPrefix());
        } else {
            jTextFieldInvoicePrefix.setVisible(false);
            jLabelInvoiceNumberPadding.setVisible(false);
            jTextFieldInvoiceNumber.setPreferredSize(new Dimension(200, 20));
        }

        if (activeFlag.isReplacePaypal()) {
            new Placeholder("Your payment link", jTextFieldPaypalEmail);
            jCheckBoxPayPal.setText("Get Paid Online");
            jLabelHelp2.setToolTipText("<html>Get paid faster by inserting a custom payment link to your online gateway or shop.<br>The link will be available on the invoice with the title <b>Pay Online Now</b>.<br>Please enter your link using one of these formats: <b>www.example.com</b> or <b>http://example.com</b>.</html>");

        } else {
            new Placeholder("Your PayPal email", jTextFieldPaypalEmail);
        }

        updateTotals();
    }

