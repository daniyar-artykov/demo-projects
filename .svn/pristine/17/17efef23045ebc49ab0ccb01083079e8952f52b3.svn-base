    private void updateBalance() {
        String text = "<html><a href=\"url\">Add Payment</a><br><b>#balance#</b></html>";
        boolean isRoundedOff = invoice.getFlag().isTotalWithoutDecimals();
        BigDecimal balance = invoice.getTotalAll().setScale(isRoundedOff ? 0 : precision, RoundingMode.HALF_UP).subtract(InvoicePayment.getTotalPaidById(Common.connection.getConnection(), invoice.getId(), precision)).setScale(precision, RoundingMode.HALF_UP);
        boolean isNegativeBalance = balance.compareTo(BigDecimal.ZERO) == -1;
        jLabelAddPayment.setText(text.replace("#balance#", "Balance: " + (isNegativeBalance ? ("(" + balance.negate().toPlainString() + ")") : balance.toPlainString())));
    }

