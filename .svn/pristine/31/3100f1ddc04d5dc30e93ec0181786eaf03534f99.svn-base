	/** Creates new form JSelImagePanel */
	public JSelImagePanel() {
		this(null, null);
	}

	public JSelImagePanel(String imagePath, String imageSelectionPath,
			int width, int height) {
		initComponents();
		if(!imagePath.isEmpty()){
			jImagePanelEx.setImage(new ImageIcon(imagePath).getImage().getScaledInstance(
					width, height, Image.SCALE_SMOOTH));
		}
		if(!imageSelectionPath.isEmpty()){
			jImagePanelEx.setImageSelection(new ImageIcon(imageSelectionPath).getImage()
					.getScaledInstance((int) (width / 1.2), (int) (width / 1.2), Image.SCALE_SMOOTH));
		}
		jImagePanelEx.setSelected(false);
	}

	public JSelImagePanel(Image image, Image imageSelection) {
		initComponents();
		jImagePanelEx.setImage(image);
		jImagePanelEx.setImageSelection(imageSelection);
	}

	public void setImage(Image image) {
		jImagePanelEx.setImage(image);
	}

	public void setImage(String imagePath) {
		jImagePanelEx.setImage(new ImageIcon(imagePath).getImage());
	}

	public void setImageSelection(Image imageSelection) {
		jImagePanelEx.setImageSelection(imageSelection);
	}

	public void setImageSelection(String imageSelectionPath) {
		jImagePanelEx.setImageSelection(new ImageIcon(imageSelectionPath).getImage());
	}

	public void setSelected(boolean selected) {
		jImagePanelEx.setSelected(selected);
		if(jImagePanelEx.isSelected()){
			this.setBackground(selectionBackground);
			this.setBorder(selectionBorder);
			jImagePanelEx.setBorder(selectionImageBorder);
		} else {
			this.setBackground(background);
			this.setBorder(border);
			jImagePanelEx.setBorder(imageBorder);
		}
	}

