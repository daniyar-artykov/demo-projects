	public void setMessageOverFlow(String message) {
            if (message.isEmpty()){
                this.setVisible(false);
                jLOK.setIcon(new ImageIcon("./images/icons/Ok_32.png"));
                jLbilaV.setVisible(true);
                //jLMessage.setHorizontalAlignment(javax.swing.SwingConstants.CENTER);
            }else{// ocumentul nu incape pe  pe o coala A4/A5...
		jLMessage.setText(message);
                jLOK.setIcon(new ImageIcon("./images/dialogs/icon_exclamare.png"));
                jLbilaV.setVisible(false);
               // jLMessage.setHorizontalAlignment(javax.swing.SwingConstants.EAST);
            }
	}
