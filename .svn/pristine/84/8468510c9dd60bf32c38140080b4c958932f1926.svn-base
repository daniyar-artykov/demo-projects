    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBox1ActionPerformed
        int index = jComboBox1.getSelectedIndex();
        
        switch(index){
           case 0:
                    changeLanguage(new Locale("en", "US"), this);
                    break;
           case 1:
                    changeLanguage(new Locale("ro", "RO"), this);
                    break;
                 
           case 2:
                    changeLanguage(new Locale("fr", "FR"), this);
                    break;
        }
        
        this.repaint();
    }//GEN-LAST:event_jComboBox1ActionPerformed

    private void changeLanguage(Locale locale, Container comp) {
        ResourceBundle bundle = ResourceBundle.getBundle("slickbill.resources.TestBundle", locale);
        for (Component c : comp.getComponents()) {
            if (c instanceof JLabel) {
                JLabel label = (JLabel) c;

                String str = "";

                try {
                    str = bundle.getString(label.getName());
                } catch (Exception ex) {
                }


                label.setText(str.equals("") ? label.getText() : str);
            } else if (c instanceof Container) {
                changeLanguage(locale, (Container) c);
            }
        }
    }
