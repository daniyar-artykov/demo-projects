    private void jButtonLogInActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonLogInActionPerformed
        Config c = Common.selectedCompanyConfig;
        if (jPasswordField1.getText().equals(Common.encode().decrypt(c.get(Config.PASSWORD)))) {
            ok = true;
            dispose();
        } else {
            Messages.showWarningMessage(this, "You entered an incorrect password.", "Warning");
            ok = false;
        }
    }//GEN-LAST:event_jButtonLogInActionPerformed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        if(Messages.showQuestionMessage(this, "Are you sure you want to exit Sleek Bill?", "Confirmation") == JOptionPane.YES_OPTION){
            System.exit(0);
        }
    }//GEN-LAST:event_jButton1ActionPerformed

    private void formWindowClosing(java.awt.event.WindowEvent evt) {//GEN-FIRST:event_formWindowClosing
        if(Messages.showQuestionMessage(this, "Are you sure you want to exit Sleek Bill?", "Confirmation") == JOptionPane.YES_OPTION){
            System.exit(0);
        }else{
            setDefaultCloseOperation(JDialog.DO_NOTHING_ON_CLOSE);
        }
    }//GEN-LAST:event_formWindowClosing

