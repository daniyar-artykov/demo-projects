    private void jLabel1MousePressed(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jLabel1MousePressed
        if(openBrowser){
			try {
				SBDesktop.browse(new java.net.URI(url.replace("#source#", source).replace("#campaign#", campaign)));
			} catch (Exception ex) {
				ex.printStackTrace();
			}
			Common.NOTIFIED = false;//sa nu deschida programul
		}
		dispose();
    }//GEN-LAST:event_jLabel1MousePressed

